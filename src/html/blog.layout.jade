include mixins/layout.mixins.jade

doctype html
html(lang='ru')
    head
        meta(charset='UTF-8')
        meta(name="description" content='Real-Estate')
        meta(name='viewport' content='width=device-width, initial-scale=1')
        link(rel="icon" type="image/png" href="img/favicon.png")
        title
            block title
        //build:css css/jquery.bxslider.min.css
        +vendor('style', 'bxslider/jquery.bxslider.css')
        //endbuild
        link(rel="stylesheet" href="css/styles.min.css")
    body.body-gray
        header.header
            .header-wrap
                a.logo-link(href="index.html")
                    img.logo-img(src="img/logo.png")
                    .menu-logo
                        span.menu-logo-text blog
                nav.menu.menu-blog
                    ul.menu-list
                        li.menu-item
                            a.menu-link(href="#") App Home
                        li.menu-item
                            a.menu-link(href="#") Featured
                        li.menu-item
                            a.menu-link(href="#") Latest
                        li.menu-item
                            a.menu-link(href="#") Single Post
                a.search-link(href="#")
                    img.search-image(src="img/search.png" alt="search-image")

        block content

        include footer.jade

        script(src="js/jquery.min.js")
        script(src="js/jquery.bxslider.js")

        //build:js js/main.min.js
        script(src="../../js/slider.js")
        //endbuild